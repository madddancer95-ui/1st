      margin: 20px auto;
      text-align: center;
    }

    .size-square {
      width: 60px;
      height: 60px;
      border: 2px solid var(--accent-primary);
      margin: 10px auto;
      border-radius: 8px;
      background: rgba(255,255,255,0.05);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--accent-primary);
      font-size: 0.8rem;
      transition: all 0.3s ease;
    }

    .size-visual-label {
      color: var(--text-secondary);
      font-size: 0.9rem;
      margin-top: 10px;
    }

    /* Results Panel */
    .results-panel {
      text-align: center;
    }

    .price-display {
      background: linear-gradient(135deg, rgba(255,255,255,0.15), rgba(255,255,255,0.05));
      border-radius: 20px;
      padding: 40px;
      margin: 30px 0;
      border: 2px solid rgba(255,255,255,0.1);
      backdrop-filter: blur(15px);
    }

    .estimated-price {
      font-size: 3rem;
      font-weight: 700;
      color: var(--accent-primary);
      margin-bottom: 10px;
    }

    .price-breakdown {
      color: var(--text-secondary);
      font-size: 1rem;
      margin-bottom: 20px;
    }

    .price-note {
      font-size: 0.9rem;
      color: var(--muted);
      font-style: italic;
    }

    /* Action Buttons */
    .action-buttons {
      display: flex;
      gap: 15px;
      justify-content: center;
      margin-top: 30px;
      flex-wrap: wrap;
    }

    .btn-primary {
      padding: 15px 30px;
      background: linear-gradient(135deg, rgba(255,255,255,0.95), rgba(255,255,255,0.85));
      color: #000;
      border: none;
      border-radius: 50px;
      font-weight: 600;
      font-size: 16px;
      cursor: pointer;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 10px;
      transition: all 0.3s ease;
      box-shadow: 0 8px 32px rgba(0,0,0,0.3);
      backdrop-filter: blur(10px);
    }

    .btn-secondary {
      background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05));
      color: var(--text-primary);
      border: 1px solid rgba(255,255,255,0.2);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 40px rgba(0,0,0,0.4);
    }

    .btn-secondary:hover {
      background: linear-gradient(135deg, rgba(255,255,255,0.15), rgba(255,255,255,0.08));
    }

    /* Features Grid */
    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin: 60px 0;
    }

    .feature-card {
      background: rgba(255,255,255,0.03);
      padding: 25px;
      border-radius: 16px;
      text-align: center;
      border: 1px solid var(--border);
      backdrop-filter: blur(8px);
    }

    .feature-icon {
      font-size: 2.5rem;
      margin-bottom: 15px;
    }

    .feature-title {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 10px;
      color: var(--text-primary);
    }

    .feature-desc {
      font-size: 0.9rem;
      color: var(--text-secondary);
    }

    /* Mobile Responsiveness */
    @media (max-width: 768px) {
      .calculator-section {
        grid-template-columns: 1fr;
        gap: 30px;
      }

      .calculator-panel {
        padding: 30px 20px;
      }

      .action-buttons {
        flex-direction: column;
      }

      .btn-primary,
      .btn-secondary {
        width: 100%;
        justify-content: center;
      }

      .estimated-price {
        font-size: 2.5rem;
      }
    }
  </style>
</head>

