    const placementSelect = document.getElementById('placement');
    const examplesSelect = document.getElementById('examples');
    const serviceTypeSelect = document.getElementById('service-type');
    const totalPriceDisplay = document.getElementById('total-price');
    const priceBreakdownDisplay = document.getElementById('price-breakdown');
    const getQuoteBtn = document.getElementById('get-quote-btn');

    let currentCalculation = {
      basePrice: 299,
      size: 3,
      style: '',
      placement: '',
      examples: '',
      serviceType: 'new',
      total: 897
    };

    // Update size display
    sizeSlider.addEventListener('input', function() {
      currentCalculation.size = parseFloat(this.value);
      sizeDisplay.textContent = `${currentCalculation.size} inches`;
      calculatePrice();
    });

    // Update calculations on any change
    [styleSelect, examplesSelect, serviceTypeSelect, placementSelect].forEach(element => {
      element.addEventListener('change', calculatePrice);
    });

    function calculatePrice() {
      const serviceType = serviceTypeSelect.value;
      const selectedStyle = styleSelect.value;
      
      if (serviceType === 'removal') {
        // Tattoo Removal Pricing (based on square inches)
        const squareInches = currentCalculation.size * currentCalculation.size;
        let removalPrice = 0;
        
        if (squareInches <= 2) {
          removalPrice = 699; // Small (up to 2 sq in)
        } else if (squareInches <= 5) {
          removalPrice = 999; // Medium (3-5 sq in)
        } else {
          removalPrice = 1499; // Large (above 5 sq in)
        }
        
        currentCalculation.total = removalPrice;
        totalPriceDisplay.textContent = `‚Çπ${currentCalculation.total.toLocaleString()}`;
        
        let sizeCategory = '';
        if (squareInches <= 2) sizeCategory = 'Small';
        else if (squareInches <= 5) sizeCategory = 'Medium';
        else sizeCategory = 'Large';
        
        priceBreakdownDisplay.textContent = `${sizeCategory} tattoo removal (${squareInches.toFixed(1)} sq in)`;
        
      } else {
        // New Tattoo Pricing
        if (selectedStyle) {
          const styleOption = styleSelect.querySelector(`option[value="${selectedStyle}"]`);
          currentCalculation.basePrice = parseInt(styleOption.dataset.price);
          currentCalculation.style = selectedStyle;
        }

        // Calculate total for new tattoo
        const pricePerInch = currentCalculation.basePrice;
        currentCalculation.total = Math.round(pricePerInch * currentCalculation.size);

        // Update displays
        totalPriceDisplay.textContent = `‚Çπ${currentCalculation.total.toLocaleString()}`;
        
        let breakdownText = `${currentCalculation.size} inches √ó ‚Çπ${pricePerInch}`;
        if (selectedStyle) {
          const styleNames = {
            'simple': 'Simple Design',
            'complex': 'Complex/Color Design'
          };
          breakdownText += ` (${styleNames[selectedStyle]})`;
        }
        
        priceBreakdownDisplay.textContent = breakdownText;
      }

      // Store current calculation for quote
      currentCalculation.placement = placementSelect.value;
      currentCalculation.examples = examplesSelect.value;
      currentCalculation.serviceType = serviceType;
    }

    // WhatsApp Quote Generation
    getQuoteBtn.addEventListener('click', function() {
      if (currentCalculation.serviceType === 'new' && !currentCalculation.style) {
        alert('Please select a tattoo style first!');
        return;
      }

