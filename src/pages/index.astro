  <script>
    // Contact form functionality
    document.querySelector('#contact form').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const name = formData.get('name');
      const phone = formData.get('phone');
      const tattooType = formData.get('tattoo-type');
      const size = formData.get('size');
      const message = formData.get('message');
      
      // Create WhatsApp message
      let whatsappMessage = `Hi DelhiTattooShop.com! I'm interested in getting a tattoo consultation.%0A%0A`;
      whatsappMessage += `📋 *My Details:*%0A`;
      whatsappMessage += `Name: ${encodeURIComponent(name)}%0A`;
      whatsappMessage += `Phone: ${encodeURIComponent(phone)}%0A`;
      
      if (tattooType) {
        whatsappMessage += `Tattoo Type: ${encodeURIComponent(tattooType)}%0A`;
      }
      
      if (size) {
        whatsappMessage += `Approximate Size: ${encodeURIComponent(size)}%0A`;
      }
      
      if (message) {
        whatsappMessage += `%0A💭 *My Tattoo Idea:*%0A${encodeURIComponent(message)}%0A`;
      }
      
      whatsappMessage += `%0A✨ Please let me know about availability and exact pricing. Thank you!`;
      
      // Open WhatsApp
      const whatsappURL = `https://wa.me/917217665761?text=${whatsappMessage}`;
      window.open(whatsappURL, '_blank');
      
      // Show success message
      alert('Opening WhatsApp with your message! If WhatsApp doesn\'t open automatically, please call us at +91 72176 65761');
    });

    // Mobile menu toggle
    document.querySelector('.menu-toggle').addEventListener('click', function() {
      this.classList.toggle('active');
      document.body.classList.toggle('nav-open');
      
      const nav = document.querySelector('.header-nav');
      if (this.classList.contains('active')) {
        nav.style.display = 'flex';
        nav.style.position = 'fixed';
        nav.style.top = '85px';
        nav.style.left = '0';
        nav.style.right = '0';
        nav.style.background = 'linear-gradient(135deg, rgba(0,0,0,0.95), rgba(0,0,0,0.9))';
        nav.style.flexDirection = 'column';
        nav.style.padding = '20px';
        nav.style.gap = '20px';
        nav.style.zIndex = '999';
        nav.style.borderRadius = '0 0 20px 20px';
        nav.style.backdropFilter = 'blur(20px)';
        nav.style.border = '1px solid rgba(255,255,255,0.1)';
      } else {
        nav.style.display = 'none';
        document.body.classList.remove('nav-open');
      }
    });

    // Smooth scrolling for navigation links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
          
          // Close mobile menu if open
          const menuToggle = document.querySelector('.menu-toggle');
          const nav = document.querySelector('.header-nav');
          if (menuToggle.classList.contains('active')) {
            menuToggle.classList.remove('active');
            nav.style.display = 'none';
            document.body.classList.remove('nav-open');
          }
        }
      });
    });

    // Form validation enhancement
    const inputs = document.querySelectorAll('#contact input[required]');
    inputs.forEach(input => {
      input.addEventListener('blur', function() {
        if (!this.value.trim()) {
          this.style.borderColor = 'rgba(255, 255, 255, 0.5)';
          this.style.boxShadow = '0 0 0 2px rgba(255, 255, 255, 0.2)';
        } else {
          this.style.borderColor = 'rgba(255, 255, 255, 0.3)';
          this.style.boxShadow = '0 0 0 2px rgba(255, 255, 255, 0.1)';
        }
      });
    });

    // Location dropdown functionality
    function toggleLocations(event) {
      event.preventDefault();
      const menu = document.getElementById('locations-menu');
      if (!menu) return;
      
      if (menu.style.display === 'block') {
        menu.style.display = 'none';
      } else {
        menu.style.display = 'block';
      }
    }

    // Close dropdown when clicking outside
    document.addEventListener('click', function(event) {
      const menu = document.getElementById('locations-menu');
      const trigger = event.target.closest('[onclick*="toggleLocations"]');
      if (!trigger && menu && menu.style.display === 'block') {
        menu.style.display = 'none';
      }
    });

    // Initialize dropdown as hidden on page load
    document.addEventListener('DOMContentLoaded', function() {
      const menu = document.getElementById('locations-menu');
      if (menu) {
        menu.style.display = 'none';
      }
    });
  </script>
