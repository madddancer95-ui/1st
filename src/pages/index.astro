  <style>
    :root {
      --accent-primary: #ff6b35;
      --accent-secondary: #ffa500;
      --text-primary: #ffffff;
      --text-secondary: rgba(255,255,255,0.8);
      --muted: rgba(255,255,255,0.6);
      --border: rgba(255,255,255,0.1);
      --accent-white: #ffffff;
      --accent-white2: rgba(255,255,255,0.9);
      --glass-bg: rgba(255,255,255,0.012);
      --max-width: 1200px;
      --golden-ratio: 1.618;
      --nav-width-mobile: 61.8vw;
      --nav-spacing-golden: calc(1.618 * 16px);
      --nav-spacing-large: calc(1.618 * 24px);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #000000 0%, #1a1a1a 50%, #000000 100%);
      color: white;
      min-height: 100vh;
      line-height: 1.6;
      overflow-x: hidden;
    }

    /* Video Background Container */
    .top-section-container {
      position: relative;
      width: 100%;
      height: calc(100vh + 100px);
      overflow: hidden;
    }
    
    /* Allow navigation to show when open */
    body.nav-open .top-section-container {
      overflow: visible;
      z-index: 1;
    }
    
    .top-section-video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -10;
    }
    
    .top-section-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, rgba(0,0,0,0.3), rgba(0,0,0,0.1));
      z-index: -9;
    }

    .header-outer { 
      display: flex; 
      justify-content: center; 
      width: 100%; 
      margin: 0 auto;
      position: relative;
    }

    .apex-header {
      position: sticky; 
      top: 12px; 
      z-index: 99;
      display: flex; 
      justify-content: center; 
      width: 100%;
      background: none; 
      pointer-events: none;
      overflow: hidden;
      border-radius: 999px;
    }
    
    /* Mobile sticky header */
    @media (max-width: 820px) {
      .apex-header {
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        right: 0 !important;
        z-index: 1000 !important;
        border-radius: 0 !important;
      }
      
      /* Prevent content from being hidden under fixed header */
      .top-section-container {
        padding-top: 0 !important;
        margin-top: -85px !important;
        padding-bottom: 85px !important;
        min-height: calc(100vh + 85px) !important;
        height: calc(100vh + 85px) !important;
      }
      
      /* Ensure main content doesn't get hidden */
      #main {
        position: relative;
        z-index: 1;
      }
    }
    
    .glass-header {
      width: 100%; 
      max-width: var(--max-width);
      display: flex; 
      align-items: center; 
      justify-content: space-between;
      gap: 20px; 
      padding: 14px 28px;
      border-radius: 999px;
      background: 
        linear-gradient(135deg, rgba(255,255,255,0.012), rgba(255,255,255,0.006)),
        radial-gradient(circle at 20% 50%, rgba(255,255,255,0.008), transparent 60%);
      border: 1px solid rgba(255,255,255,0.025);
      backdrop-filter: blur(15px);
      box-shadow: 
        0 8px 32px rgba(0,0,0,0.3),
        0 0 0 1px rgba(255,255,255,0.02),
        inset 0 1px 0 rgba(255,255,255,0.05),
        inset 0 -1px 0 rgba(0,0,0,0.1);
      animation: shimmer 3s ease-in-out infinite;
      pointer-events: all;
      transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }
    
    .glass-header:before {
      content: '';
      position: absolute;
      top: -1px;
      left: -50%;
      width: 200%;
      height: calc(100% + 2px);
      background: linear-gradient(
        90deg, 
        transparent,
        rgba(255,255,255,0.01),
        transparent
      );
      transform: translateX(-100%);
      animation: shimmerSweep 4s ease-in-out infinite;
      pointer-events: none;
      z-index: -1;
    }
    
    .brand {
      flex-shrink: 0;
      z-index: 10;
      pointer-events: all;
      display: flex;
      align-items: center;
      font-family: 'Playfair Display', serif;
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--accent-primary);
      text-decoration: none;
    }
    
    .header-nav {
      display: flex; 
      gap: 14px; 
      align-items: center;
      flex: 1 1 auto; 
      justify-content: flex-end;
    }
    
    .header-nav a {
      font-family: 'Playfair Display', serif;
      font-weight: 700;
      font-size: 15px;
      color: #fff;
      padding: 6px 16px;
      text-decoration: none;
      border-radius: 8px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      pointer-events: all;
    }
    
    .header-nav a:hover,
    .header-nav a.active {
      color: #fff; 
      border-bottom: 2px solid #fff;
    }
    
    .menu-toggle {
      display: none;
      flex-direction: column;
      justify-content: center;
      width: 30px;
      height: 30px;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0;
      position: relative;
      z-index: 1001;
      pointer-events: all;
    }
    
    .menu-toggle span {
      display: block;
      width: 20px;
      height: 2px;
      background: #fff;
      margin: 3px 0;
      transition: all 0.3s ease;
      transform-origin: center;
    }
    
    .menu-toggle.active span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }
    
    .menu-toggle.active span:nth-child(2) {
      opacity: 0;
    }
    
    .menu-toggle.active span:nth-child(3) {
      transform: rotate(-45deg) translate(7px, -6px);
    }

    /* Hero Section Styles - EXACT from Your theme */
    .hero-wrap {
      position: relative;
      min-height: 100vh;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }
    
    .glass-hero {
      position: relative;
      z-index: 1;
      text-align: center;
      max-width: 900px;
      padding: 60px 50px;
      background: rgba(255,255,255,0.03);
      border: 1px solid rgba(255,255,255,0.05);
      border-radius: 16px;
      backdrop-filter: blur(20px);
      box-shadow: 
        0 8px 32px rgba(0,0,0,0.2),
        inset 0 1px 0 rgba(255,255,255,0.1);
      animation: gentleFloat 8s ease-in-out infinite;
    }
    
    @keyframes gentleFloat {
      0%, 100% { 
        transform: translateY(0px) scale(1);
      }
      50% { 
        transform: translateY(-4px) scale(1.002);
      }
    }

    .hero-title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(36px, 5.5vw, 54px);
      font-weight: 300;
      margin: 0 0 20px;
      letter-spacing: 0.02em;
      line-height: 1.2;
      background: linear-gradient(135deg, rgba(255,255,255,0.95), rgba(255,255,255,0.7));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      filter: drop-shadow(0 6px 20px rgba(0,0,0,0.9)) 
              drop-shadow(0 2px 8px rgba(0,0,0,0.8)) 
              drop-shadow(0 0 40px rgba(0,0,0,0.6));
      animation: shadowPulse 4s ease-in-out infinite;
    }
    
    @keyframes shadowPulse {
      0%, 100% {
        filter: drop-shadow(0 6px 20px rgba(0,0,0,0.9)) 
                drop-shadow(0 2px 8px rgba(0,0,0,0.8)) 
                drop-shadow(0 0 40px rgba(0,0,0,0.6));
      }
      50% {
        filter: drop-shadow(0 8px 25px rgba(0,0,0,0.95)) 
                drop-shadow(0 3px 12px rgba(0,0,0,0.85)) 
                drop-shadow(0 0 50px rgba(0,0,0,0.7));
      }
    }

    .hero-sub {
      font-size: 19px;
      margin: 0 0 48px;
      color: rgba(255,255,255,0.85);
      line-height: 1.6;
      font-weight: 400;
      letter-spacing: 0.015em;
      text-shadow: 0 6px 18px rgba(0,0,0,0.9), 
                   0 2px 8px rgba(0,0,0,0.8), 
                   0 0 30px rgba(0,0,0,0.7);
    }

    .hero-ctas {
      display: flex;
      gap: 24px;
      justify-content: center;
      flex-wrap: wrap;
      margin: 52px 0 42px 0;
    }
    
    .btn-solid {
      position: relative;
      padding: 16px 32px;
      background: linear-gradient(135deg, 
                  rgba(255,255,255,0.95), 
                  rgba(255,255,255,0.85));
      color: #000;
      border: 1px solid rgba(255,255,255,0.3);
      border-radius: 50px;
      font-weight: 600;
      font-size: 15px;
      letter-spacing: 0.025em;
      transition: all 0.4s cubic-bezier(0.23, 1, 0.320, 1);
      cursor: pointer;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      box-shadow: 
        0 8px 32px rgba(0,0,0,0.3),
        0 4px 16px rgba(0,0,0,0.2),
        inset 0 1px 0 rgba(255,255,255,0.6),
        inset 0 -1px 0 rgba(255,255,255,0.1);
      backdrop-filter: blur(10px);
    }
    
    .btn-solid:before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, 
                  transparent, 
                  rgba(255,255,255,0.4), 
                  transparent);
      transition: left 0.6s;
    }
    
    .btn-solid:hover {
      transform: translateY(-3px) scale(1.02);
      box-shadow: 
        0 12px 40px rgba(0,0,0,0.4),
        0 6px 20px rgba(0,0,0,0.3),
        0 0 0 1px rgba(255,255,255,0.5),
        inset 0 1px 0 rgba(255,255,255,0.8);
      background: linear-gradient(135deg, 
                  rgba(255,255,255,1), 
                  rgba(255,255,255,0.9));
    }
    
    .btn-solid:hover:before {
      left: 100%;
    }
    
    .btn-secondary {
      background: linear-gradient(135deg, 
                  rgba(255,255,255,0.05), 
                  rgba(255,255,255,0.02));
      color: rgba(255,255,255,0.9);
      border: 1px solid rgba(255,255,255,0.15);
    }
    
    .btn-secondary:hover {
      background: linear-gradient(135deg, 
                  rgba(255,255,255,0.1), 
                  rgba(255,255,255,0.05));
      color: rgba(255,255,255,1);
      border-color: rgba(255,255,255,0.25);
      box-shadow: 
        0 12px 40px rgba(255,255,255,0.05),
        0 6px 20px rgba(255,255,255,0.03),
        inset 0 1px 0 rgba(255,255,255,0.1);
    }

    .hero-supporting-info {
      margin: 42px 0 0;
    }
    
    .hero-info-line {
      margin: 13px 0;
      color: rgba(255,255,255,0.75);
      font-size: 14px;
      line-height: 1.618;
      letter-spacing: 0.01em;
      text-shadow: 0 4px 12px rgba(0,0,0,0.8), 0 0 20px rgba(0,0,0,0.6);
    }

    .badges {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
      gap: 16px;
      margin: 42px 0 52px 0;
    }
    
    .badge {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 16px 20px;
      background: 
        linear-gradient(135deg, rgba(255,255,255,0.008), rgba(255,255,255,0.004));
      border: 1px solid rgba(255,255,255,0.015);
      border-radius: 16px;
      font-size: 14px;
      font-weight: 500;
      letter-spacing: 0.01em;
      text-shadow: 0 2px 8px rgba(0,0,0,0.7);
      backdrop-filter: blur(8px);
      transition: all 0.3s ease;
      box-shadow: 
        0 8px 24px rgba(0,0,0,0.1),
        inset 0 1px 0 rgba(255,255,255,0.03);
    }
    
    .badge:hover {
      background: 
        linear-gradient(135deg, rgba(255,255,255,0.015), rgba(255,255,255,0.008));
      border-color: rgba(255,255,255,0.025);
      transform: translateY(-2px);
      box-shadow: 
        0 12px 30px rgba(0,0,0,0.15),
        inset 0 1px 0 rgba(255,255,255,0.05);
    }

    /* Container */
    .container {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 20px;
    }

    /* Main Content Sections */
    #main {
      background: linear-gradient(135deg, #000000 0%, #1a1a1a 50%, #000000 100%);
      position: relative;
      z-index: 1;
    }

    .section {
      padding: 80px 0;
      position: relative;
    }

    .section-title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(2rem, 4vw, 3rem);
      text-align: center;
      margin-bottom: 1rem;
      color: var(--text-primary);
    }

    .section-sub {
      text-align: center;
      font-size: 1.1rem;
      color: var(--text-secondary);
      margin-bottom: 3rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .glass-panel {
      background: rgba(255,255,255,0.08);
      border-radius: 20px;
      padding: 2.5rem 2rem;
      border: 1px solid var(--border);
      backdrop-filter: blur(10px);
      box-shadow: 
        0 8px 32px rgba(0,0,0,0.3),
        0 0 0 1px rgba(255,255,255,0.02),
        inset 0 1px 0 rgba(255,255,255,0.05);
    }

    /* Footer Styles - Exact from Your theme */
    .site-footer {
      padding: 30px 0 20px;
      border-top: 1px solid var(--border);
      background: linear-gradient(135deg, rgba(0,0,0,0.8), rgba(0,0,0,0.6));
      margin-top: 20px;
    }
    
    .footer-info {
      display: grid;
      grid-template-columns: 1fr;
      gap: 32px;
      margin: 40px 0;
      padding: 32px 0;
      border-top: 1px solid rgba(255,255,255,0.08);
      border-bottom: 1px solid rgba(255,255,255,0.08);
    }
    
    @media(min-width: 768px) {
      .footer-info {
        grid-template-columns: repeat(3, 1fr);
      }
    }
    
    .footer-section h4 {
      margin: 0 0 16px;
      color: var(--accent-primary);
      font-family: 'Playfair Display', serif;
      font-size: 18px;
      font-weight: 600;
    }
    
    .footer-section p {
      margin: 0 0 8px;
      color: var(--muted);
      line-height: 1.6;
      font-size: 14px;
    }
    
    .footer-section a {
      color: var(--accent-primary);
      text-decoration: none;
    }
    
    .footer-section a:hover {
      text-decoration: underline;
    }
    
    .footer-bottom {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 16px;
      padding: 20px 0;
    }
    
    .footer-bottom p {
      margin: 0;
      color: var(--muted);
      font-size: 14px;
    }
    
    .footer-links {
      display: flex;
      gap: 24px;
      flex-wrap: wrap;
    }
    
    .footer-links a {
      color: var(--muted);
      text-decoration: none;
      font-size: 14px;
      transition: color 0.2s ease;
    }
    
    .footer-links a:hover {
      color: var(--accent-primary);
    }

    /* Mobile Video Optimization */
    @media (max-width: 768px) {
      .top-section-video {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(90deg);
        width: 100vh;
        height: 100vw;
        min-width: 100vh;
        min-height: 100vw;
        object-fit: cover;
        z-index: -2;
      }
      
      .top-section-container {
        position: relative;
        overflow: hidden;
      }
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
      .glass-header { 
        padding: 8px 14px; 
        gap: 10px; 
      }
      .header-nav { display: none !important; }
      .menu-toggle { 
        display: flex !important; 
        order: -1;
      }
      .brand { 
        order: 0; 
        margin-left: auto; 
      }

      .hero-wrap {
        min-height: 65vh;
        padding: 200px 0 10px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      .glass-hero {
        padding: 24px 18px 28px;
        max-width: 88vw;
        margin: 10px auto;
        border-radius: 14px;
        background: 
          radial-gradient(circle at 30% 20%, rgba(255,255,255,0.02), transparent 50%),
          linear-gradient(135deg, rgba(255,255,255,0.01), rgba(255,255,255,0.005));
        backdrop-filter: blur(14px);
        border: 1px solid rgba(255,255,255,0.05);
        transform: scale(0.95);
      }

      .hero-title {
        font-size: clamp(26px, 7vw, 34px);
        margin: 0 0 16px;
        line-height: 1.1;
        letter-spacing: 0.01em;
        filter: drop-shadow(0 4px 15px rgba(0,0,0,0.95)) 
                drop-shadow(0 2px 8px rgba(0,0,0,0.85));
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .hero-sub {
        font-size: clamp(16px, 4.2vw, 19px);
        margin-bottom: 24px;
        line-height: 1.4;
        opacity: 0.92;
        filter: drop-shadow(0 3px 10px rgba(0,0,0,0.8));
        display: block;
        text-align: center;
      }

      .hero-ctas {
        flex-direction: column;
        align-items: center;
        gap: 10px;
        margin-top: 22px;
      }
      
      .hero-ctas .btn-solid {
        width: 100%;
        max-width: 280px;
        padding: 15px 24px;
        font-size: 15px;
        text-align: center;
        border-radius: 12px;
        backdrop-filter: blur(15px);
        transition: all 0.3s ease;
        margin: 0;
      }

      .footer-bottom {
        flex-direction: column;
        text-align: center;
      }
      
      .footer-links {
        justify-content: center;
      }
    }

    @keyframes shimmer {
      0%, 100% { opacity: 0.7; }
      50% { opacity: 1; }
    }
    
    @keyframes shimmerSweep {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }

    /* Fade in animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .glass-hero * {
      animation: fadeInUp 0.8s ease forwards;
    }
  </style>
</head>

<body id="apex-page">
  <div class="top-section-container">
