  <script src="/gtm.js" is:inline></script>

  <!-- Core Web Vitals Optimization -->
  <meta name="theme-color" content="#000000">
  <meta name="color-scheme" content="dark light">

  <style>
    :root {
      --glass-bg: rgba(18, 18, 18, 0.06);
      --glass-border: rgba(255,255,255,0.08);
      --glass-blur: 20px;
      --max-width: 1150px;
      --accent-white: rgba(255,255,255,0.95);
      --accent-white2: rgba(255,255,255,0.70);
    }
    
    #apex-page {
      --bg: #0f0f0f;
      --panel: rgba(255,255,255,0.06);
      --border: rgba(255,255,255,0.12);
      --text: #fff;
      --muted: #d1d1d1;
      --glass-radius: 18px;
      --blur: 14px;
      --container: 1200px;
      --accent-primary: rgba(255,255,255,0.9);
      --accent-hover: rgba(255,255,255,0.15);
    }
    
    #apex-page *, #apex-page *::before, #apex-page *::after {
      box-sizing: border-box;
    }
    
    #apex-page {
      margin: 0;
      padding: 0;
      background: var(--bg);
      color: var(--text);
      font-family: 'Poppins', sans-serif;
      line-height: 1.6;
      overflow-x: hidden;
      font-size: 16px;
    }
    
    #apex-page a {
      color: inherit;
      transition: all 0.2s ease;
      text-decoration: none;
    }
    
    #apex-page .container {
      max-width: var(--container);
      margin: 0 auto;
      padding: 0 20px;
    }
    
    /* Header Styles */
    .header-outer { 
      display: flex; 
      justify-content: center; 
      width: 100%; 
      margin: 0 auto;
      position: relative;
    }
    
    .top-section-container {
      position: relative;
      width: 100%;
      height: calc(100vh + 100px);
      overflow: hidden;
    }
    
    .top-section-video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -2;
      opacity: 1;
    }
    
    .top-section-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, rgba(0,0,0,0.2), rgba(0,0,0,0.1));
      z-index: -1;
    }
    
    .apex-header {
      position: sticky; 
      top: 12px; 
      z-index: 99;
      display: flex; 
      justify-content: center; 
      width: 100%;
      background: none; 
      pointer-events: none;
      overflow: hidden;
      border-radius: 999px;
    }
    
    .glass-header {
      width: 100%; 
      max-width: var(--max-width);
      display: flex; 
      align-items: center; 
      justify-content: space-between;
      gap: 20px; 
      padding: 14px 28px;
      border-radius: 999px;
      background: 
        linear-gradient(135deg, rgba(255,255,255,0.012), rgba(255,255,255,0.006)),
        radial-gradient(circle at 20% 50%, rgba(255,255,255,0.008), transparent 60%);
      border: 1px solid rgba(255,255,255,0.025);
      backdrop-filter: blur(15px);
      box-shadow: 
        0 0 0 1px rgba(255,255,255,0.04),
        0 20px 60px rgba(0,0,0,0.25),
        0 8px 30px rgba(0,0,0,0.15),
        inset 0 1px 0 rgba(255,255,255,0.08),
        inset 0 -1px 0 rgba(255,255,255,0.01);
      pointer-events: auto; 
      position: relative;
      overflow: hidden;
    }
    
    .glass-header:before {
      content: '';
      position: absolute;
      top: -1px;
      left: -50%;
      width: 200%;
      height: calc(100% + 2px);
      background: linear-gradient(90deg, 
                  transparent, 
                  rgba(255,255,255,0.06) 50%, 
                  transparent);
      border-radius: 999px;
      opacity: 0.7;
      animation: shimmer 3s ease-in-out infinite;
    }
    
    @keyframes shimmer {
      0%, 100% { transform: translateX(-100%); }
      50% { transform: translateX(100%); }
    }
    
    .brand {
      display: flex;
      align-items: center;
      gap: 10px;
      font-weight: 600;
      font-size: 18px;
      color: var(--text);
    }
    
    .header-nav {
      display: flex;
      gap: 28px;
    }
    
    .header-nav a {
      font-weight: 500;
      font-size: 15px;
      color: rgba(255,255,255,0.8);
      transition: all 0.2s ease;
    }
    
    .header-nav a:hover {
      color: rgba(255,255,255,1);
    }
    
    .menu-toggle {
      display: none;
      background: none;
      border: none;
      cursor: pointer;
      flex-direction: column;
      gap: 4px;
      padding: 8px;
    }
    
    .menu-toggle span {
      width: 20px;
      height: 2px;
      background: rgba(255,255,255,0.8);
      transition: all 0.3s ease;
    }
    
    @media (max-width: 768px) {
      .header-nav {
        display: none;
      }
      
      .menu-toggle {
        display: flex;
      }
      
      .apex-header {
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        right: 0 !important;
        z-index: 1000 !important;
        padding: 12px 0 !important;
      }
      
      .top-section-container {
        padding-top: 0 !important;
        margin-top: -85px !important;
        padding-bottom: 85px !important;
        min-height: calc(100vh + 85px) !important;
        height: calc(100vh + 85px) !important;
      }
    }
    
    /* Liquid Background Animation */
    .liquid-bg {
      position: fixed;
      inset: -20% -8% -20% -8%;
      z-index: -3;
      pointer-events: none;
      filter: blur(36px) saturate(120%);
    }
    
    .blob {
      width: 480px;
      height: 480px;
      border-radius: 50%;
      background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.14), rgba(255,255,255,0.02) 60%, transparent 72%);
      opacity: 0.22;
      position: absolute;
      animation: float 18s ease-in-out infinite;
    }
    
    .b1 { left: -6%; top: 0; }
    .b2 { right: -10%; top: 18%; animation-delay: -6s; }
    .b3 { left: 36%; bottom: -14%; animation-delay: -12s; }
    
    @keyframes float {
      0%, 100% { transform: translate3d(0,0,0); }
      50% { transform: translate3d(0,-18px,0) scale(1.02); }
    }
    
    /* Hero Section */
    .hero-wrap {
      position: relative;
      min-height: 100vh;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }
    
    .glass-hero {
      position: relative;
      z-index: 1;
      text-align: center;
      max-width: 900px;
      padding: 60px 50px;
      background: rgba(255,255,255,0.03);
      border: 1px solid rgba(255,255,255,0.05);
      border-radius: 16px;
      backdrop-filter: blur(20px);
      box-shadow: 
        0 8px 32px rgba(0,0,0,0.2),
        inset 0 1px 0 rgba(255,255,255,0.1);
      animation: gentleFloat 8s ease-in-out infinite;
    }
    
    @keyframes gentleFloat {
      0%, 100% { 
        transform: translateY(0px) scale(1);
      }
      50% { 
        transform: translateY(-4px) scale(1.002);
      }
    }
    
    .hero-title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(36px, 5.5vw, 54px);
      font-weight: 300;
      margin: 0 0 20px;
      letter-spacing: 0.02em;
      line-height: 1.2;
      background: linear-gradient(135deg, rgba(255,255,255,0.95), rgba(255,255,255,0.7));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      filter: drop-shadow(0 6px 20px rgba(0,0,0,0.9)) 
              drop-shadow(0 2px 8px rgba(0,0,0,0.8)) 
              drop-shadow(0 0 40px rgba(0,0,0,0.6));
      animation: shadowPulse 4s ease-in-out infinite;
    }
    
    @keyframes shadowPulse {
      0%, 100% {
        filter: drop-shadow(0 6px 20px rgba(0,0,0,0.9)) 
                drop-shadow(0 2px 8px rgba(0,0,0,0.8)) 
                drop-shadow(0 0 40px rgba(0,0,0,0.6));
      }
      50% {
        filter: drop-shadow(0 8px 25px rgba(0,0,0,0.95)) 
                drop-shadow(0 3px 12px rgba(0,0,0,0.85)) 
                drop-shadow(0 0 50px rgba(0,0,0,0.7));
      }
    }
    
    .hero-sub {
      font-size: 19px;
      margin: 0 0 48px;
      color: rgba(255,255,255,0.85);
      line-height: 1.6;
      font-weight: 400;
      letter-spacing: 0.015em;
      text-shadow: 0 6px 18px rgba(0,0,0,0.9), 
                   0 2px 8px rgba(0,0,0,0.8), 
                   0 0 30px rgba(0,0,0,0.7);
    }
    
    .badges {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
      gap: 16px;
      margin: 42px 0 52px 0;
    }
    
    .badge {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 16px 20px;
      background: 
        linear-gradient(135deg, rgba(255,255,255,0.008), rgba(255,255,255,0.004));
      border: 1px solid rgba(255,255,255,0.015);
      border-radius: 16px;
      font-size: 14px;
      font-weight: 500;
      letter-spacing: 0.01em;
      text-shadow: 0 2px 8px rgba(0,0,0,0.7);
      backdrop-filter: blur(8px);
      transition: all 0.3s ease;
      box-shadow: 
        0 8px 24px rgba(0,0,0,0.1),
        inset 0 1px 0 rgba(255,255,255,0.03);
    }
    
    .badge:hover {
      background: 
        linear-gradient(135deg, rgba(255,255,255,0.015), rgba(255,255,255,0.008));
      border-color: rgba(255,255,255,0.025);
      transform: translateY(-2px);
      box-shadow: 
        0 12px 30px rgba(0,0,0,0.15),
        inset 0 1px 0 rgba(255,255,255,0.05);
    }
    
    .hero-ctas {
      display: flex;
      gap: 24px;
      justify-content: center;
      flex-wrap: wrap;
      margin: 52px 0 42px 0;
    }
    
    .btn-solid {
      position: relative;
      padding: 16px 32px;
      background: linear-gradient(135deg, 
                  rgba(255,255,255,0.95), 
                  rgba(255,255,255,0.85));
      color: #000;
      border: 1px solid rgba(255,255,255,0.3);
      border-radius: 50px;
      font-weight: 600;
      font-size: 15px;
      letter-spacing: 0.01em;
      transition: all 0.3s ease;
      box-shadow: 
        0 8px 20px rgba(0,0,0,0.15),
        inset 0 1px 0 rgba(255,255,255,0.2);
      cursor: pointer;
      display: inline-block;
    }
    
    .btn-solid:hover {
      transform: translateY(-2px);
      box-shadow: 
        0 12px 30px rgba(0,0,0,0.2),
        inset 0 1px 0 rgba(255,255,255,0.3);
      background: linear-gradient(135deg, 
                  rgba(255,255,255,1), 
                  rgba(255,255,255,0.9));
    }
    
    .btn-secondary {
      background: rgba(255,255,255,0.05);
      color: rgba(255,255,255,0.9);
      border: 1px solid rgba(255,255,255,0.1);
      backdrop-filter: blur(10px);
    }
    
    .btn-secondary:hover {
      background: rgba(255,255,255,0.08);
      border-color: rgba(255,255,255,0.15);
      color: rgba(255,255,255,1);
    }
    
    .hero-supporting-info {
      margin-top: 42px;
      text-align: left;
      max-width: 700px;
    }
    
    .hero-info-line {
      font-size: 15px;
      color: rgba(255,255,255,0.7);
      margin-bottom: 8px;
      text-shadow: 0 2px 8px rgba(0,0,0,0.6);
    }
    
    /* Section Styles */
    .section-title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(32px, 4vw, 44px);
      font-weight: 700;
      text-align: center;
      margin: 80px 0 16px;
      letter-spacing: 0.01em;
      line-height: 1.2;
    }
    
    .section-sub {
      text-align: center;
      font-size: 18px;
      color: rgba(255,255,255,0.8);
      max-width: 600px;
      margin: 0 auto 48px;
      line-height: 1.6;
    }
    
    /* Glass Panel */
    .glass-panel {
      background: linear-gradient(135deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
      border-radius: 20px;
      padding: 40px;
      margin-bottom: 40px;
      border: 1px solid var(--border);
      backdrop-filter: blur(10px);
    }
    
    /* Artist Grid */
    .artist-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 24px;
      margin-top: 32px;
    }
    
    .artist-card {
      background: rgba(255,255,255,0.02);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 20px;
      padding: 24px;
      text-align: center;
      transition: all 0.3s ease;
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }
    
    .artist-card:hover {
      transform: translateY(-4px);
      background: rgba(255,255,255,0.04);
      border-color: rgba(255,255,255,0.12);
      box-shadow: 0 12px 30px rgba(0,0,0,0.2);
    }
    
    .artist-avatar {
      width: 160px;
      height: 160px;
      border-radius: 50%;
      object-fit: cover;
      margin: 0 auto 16px;
      display: block;
      border: 2px solid rgba(255,255,255,0.1);
    }
    
    .artist-name {
      font-size: 18px;
      font-weight: 600;
      margin: 0 0 8px;
      color: rgba(255,255,255,0.95);
    }
    
    .artist-specialty {
      font-size: 14px;
      color: rgba(255,255,255,0.7);
      margin: 0 0 4px;
    }
    
    .artist-experience {
      font-size: 13px;
      color: rgba(255,255,255,0.6);
    }

    .artist-info {
      margin: 12px 0;
      padding: 12px 0;
      border-top: 1px solid rgba(255,255,255,0.1);
    }

    .artist-bio {
      font-size: 13px;
      color: rgba(255,255,255,0.7);
      line-height: 1.4;
      margin: 8px 0;
    }

    .artist-price {
      font-size: 14px;
      color: rgba(255,255,255,0.8);
      font-weight: 500;
      margin: 8px 0;
    }

    .artist-contact {
      display: flex;
      gap: 8px;
      justify-content: center;
      margin-top: 12px;
    }

    .contact-btn {
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 500;
      transition: all 0.2s ease;
      border: 1px solid rgba(255,255,255,0.1);
      background: rgba(255,255,255,0.05);
      color: rgba(255,255,255,0.8);
    }

    .contact-btn:hover {
      background: rgba(255,255,255,0.1);
      color: rgba(255,255,255,1);
      transform: translateY(-1px);
    }
    
    /* Feature Grid */
    .feature-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 32px;
    }
    
    .feature-card {
      text-align: center;
    }
    
    .feature-card h3 {
      font-size: 20px;
      font-weight: 600;
      margin: 0 0 12px;
      color: rgba(255,255,255,0.95);
    }
    
    .feature-card p {
      font-size: 16px;
      color: rgba(255,255,255,0.8);
      line-height: 1.6;
    }

    /* Pricing Section */
    .pricing-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 24px;
      margin-top: 32px;
    }

    .pricing-card {
      background: rgba(255,255,255,0.02);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 20px;
      padding: 32px 24px;
      text-align: center;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .pricing-card:hover {
      transform: translateY(-4px);
      background: rgba(255,255,255,0.04);
      border-color: rgba(255,255,255,0.12);
      box-shadow: 0 12px 30px rgba(0,0,0,0.2);
    }

    .pricing-card.popular {
      border-color: rgba(255,255,255,0.2);
      background: rgba(255,255,255,0.04);
    }

    .pricing-card.popular::before {
      content: 'Most Popular';
      position: absolute;
      top: 16px;
      right: -32px;
      background: linear-gradient(135deg, rgba(255,255,255,0.9), rgba(255,255,255,0.7));
      color: #000;
      padding: 4px 40px;
      font-size: 12px;
      font-weight: 600;
      transform: rotate(45deg);
    }

    .price-tier {
      font-size: 14px;
      color: rgba(255,255,255,0.7);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 8px;
    }

    .price-amount {
      font-size: 36px;
      font-weight: 700;
      color: rgba(255,255,255,0.95);
      margin: 0 0 4px;
    }

    .price-unit {
      font-size: 14px;
      color: rgba(255,255,255,0.6);
      margin-bottom: 24px;
    }

    .price-features {
      list-style: none;
      padding: 0;
      margin: 24px 0;
    }

    .price-features li {
      padding: 8px 0;
      font-size: 14px;
      color: rgba(255,255,255,0.7);
      border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    .price-features li:last-child {
      border-bottom: none;
    }

    /* Services Grid */
    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 24px;
      margin-top: 32px;
    }
    
    .service-card {
      background: rgba(255,255,255,0.02);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 16px;
      padding: 24px;
      transition: all 0.3s ease;
    }
    
    .service-card:hover {
      transform: translateY(-2px);
      background: rgba(255,255,255,0.04);
      border-color: rgba(255,255,255,0.12);
    }
    
    .service-card h4 {
      font-size: 18px;
      font-weight: 600;
      margin: 0 0 12px;
      color: rgba(255,255,255,0.95);
    }
    
    .service-card p {
      font-size: 15px;
      color: rgba(255,255,255,0.8);
      line-height: 1.6;
    }

    /* Gallery Section */
    .gallery-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 16px;
      margin-top: 32px;
    }

    .gallery-item {
      aspect-ratio: 1;
      border-radius: 16px;
      overflow: hidden;
      position: relative;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .gallery-item:hover {
      transform: scale(1.02);
      box-shadow: 0 8px 24px rgba(0,0,0,0.3);
    }

    .gallery-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .gallery-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(to bottom, transparent, rgba(0,0,0,0.7));
      opacity: 0;
      transition: all 0.3s ease;
      display: flex;
      align-items: flex-end;
      padding: 16px;
    }

    .gallery-item:hover .gallery-overlay {
      opacity: 1;
