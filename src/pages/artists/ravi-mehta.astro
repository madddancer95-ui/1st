  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

  <style>
    /* Core Variables */
    :root {
      --primary: #fff;
      --accent-primary: #fff;
      --text-primary: rgba(255,255,255,0.95);
      --text-secondary: rgba(255,255,255,0.8);
      --muted: rgba(255,255,255,0.6);
      --border: rgba(255,255,255,0.2);
      --bg-dark: #000;
      --glass-bg: rgba(255,255,255,0.05);
      --glass-border: rgba(255,255,255,0.1);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #000 0%, #1a1a1a 100%);
      color: var(--text-primary);
      line-height: 1.6;
      overflow-x: hidden;
      min-height: 100vh;
    }

    /* Header Styles */
    .header-outer {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      padding: 1rem 0;
    }

    .glass-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      background: rgba(0,0,0,0.8);
      backdrop-filter: blur(20px);
      border: 1px solid var(--glass-border);
      border-radius: 20px;
      margin: 0 2rem;
    }

    .brand {
      font-family: 'Playfair Display', serif;
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--primary);
      text-decoration: none;
      background: linear-gradient(135deg, #fff, #ccc);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .header-nav {
      display: flex;
      gap: 2rem;
      align-items: center;
    }

    .header-nav a {
      color: var(--text-secondary);
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
      padding: 0.5rem 1rem;
      border-radius: 10px;
    }

    .header-nav a:hover {
      color: #fff;
      background: rgba(255,255,255,0.1);
    }

    /* Artist Profile Styles */
    .artist-hero {
      padding: 120px 2rem 80px;
      background: linear-gradient(135deg, rgba(0,0,0,0.9) 0%, rgba(26,26,26,0.9) 100%);
      text-align: center;
      position: relative;
    }

    .artist-hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="tattoo-pattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="rgba(255,255,255,0.03)"/></pattern></defs><rect width="100" height="100" fill="url(%23tattoo-pattern)"/></svg>');
      opacity: 0.3;
    }

    .artist-profile-img {
      width: 200px;
      height: 200px;
      border-radius: 50%;
      background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05));
      border: 3px solid rgba(255,255,255,0.2);
      margin: 0 auto 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 4rem;
      color: rgba(255,255,255,0.6);
      position: relative;
    }

    .artist-name {
      font-family: 'Playfair Display', serif;
      font-size: 3rem;
      font-weight: 700;
      background: linear-gradient(135deg, #fff, #ccc);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 1rem;
    }

    .artist-title {
      font-size: 1.2rem;
      color: var(--text-secondary);
      margin-bottom: 1rem;
    }

    .artist-experience {
      font-size: 1.1rem;
      color: var(--accent-primary);
      font-weight: 600;
    }

    /* Content Sections */
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    .section {
      padding: 4rem 0;
    }

    .glass-panel {
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      border: 1px solid var(--glass-border);
      border-radius: 20px;
      padding: 3rem;
      margin: 2rem 0;
    }

    .section-title {
      font-family: 'Playfair Display', serif;
      font-size: 2.5rem;
      font-weight: 700;
      text-align: center;
      margin-bottom: 1rem;
      background: linear-gradient(135deg, #fff, #ccc);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .section-subtitle {
      text-align: center;
      font-size: 1.1rem;
      color: var(--text-secondary);
      margin-bottom: 3rem;
    }

    /* Specialties Grid */
    .specialties-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin: 3rem 0;
    }

    .specialty-card {
      background: rgba(255,255,255,0.03);
      border: 1px solid rgba(255,255,255,0.1);
      border-radius: 15px;
      padding: 2rem;
      text-align: center;
      transition: all 0.3s ease;
    }

    .specialty-card:hover {
      transform: translateY(-5px);
      background: rgba(255,255,255,0.05);
      border-color: rgba(255,255,255,0.2);
    }

    .specialty-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      color: var(--accent-primary);
    }

    .specialty-title {
      font-size: 1.3rem;
      font-weight: 600;
      margin-bottom: 1rem;
      color: var(--primary);
    }

    /* Stats */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
      margin: 3rem 0;
    }

    .stat-card {
      text-align: center;
      padding: 2rem;
      background: rgba(255,255,255,0.03);
      border-radius: 15px;
    }

    .stat-number {
      font-size: 3rem;
      font-weight: 700;
      color: var(--accent-primary);
      display: block;
    }

    .stat-label {
      color: var(--text-secondary);
      margin-top: 0.5rem;
    }

    /* CTA Button */
    .btn-solid {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 16px 32px;
      background: linear-gradient(135deg, rgba(255,255,255,0.15), rgba(255,255,255,0.05));
      color: var(--primary);
      text-decoration: none;
      border-radius: 12px;
      font-weight: 600;
      font-size: 1.1rem;
      border: 1px solid rgba(255,255,255,0.2);
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
      cursor: pointer;
      text-align: center;
      justify-content: center;
    }

    .btn-solid:hover {
      background: linear-gradient(135deg, rgba(255,255,255,0.25), rgba(255,255,255,0.1));
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .glass-header {
        margin: 0 1rem;
        padding: 1rem;
      }

      .header-nav {
        gap: 1rem;
      }

      .artist-hero {
        padding: 100px 1rem 60px;
      }

      .artist-name {
        font-size: 2rem;
      }

      .container {
        padding: 0 1rem;
      }

      .glass-panel {
        padding: 2rem;
      }
    }
  </style>
</head>

