---
import { artistsData } from '../../data/artists/artists-data.js';

const title = "Delhi's Top 8 Tattoo Artists | Expert Team at DelhiTattooShop.com";
const description = "Meet Delhi's most skilled tattoo artists. Professional artists specializing in realism, blackwork, fine line, Japanese art. Book consultation today.";

// Get all real artists (excluding template)
const artists = Object.entries(artistsData)
  .filter(([key, artist]) => key !== 'artist-slug') // Exclude template
  .map(([key, artist]) => ({
    id: key,
    rank_title: `${artist.title}`,
    name: artist.name,
    main_image: artist.profilePhoto,
    alt: `${artist.name} - ${artist.title}`,
    short_bio: artist.bio.intro,
    extended_bio: artist.bio.professional,
    specialties: artist.specialties,
    experience: artist.experience,
    stats: artist.stats,
    contact: artist.contact,
    portfolioPhotos: artist.portfolioPhotos,
    other_buttons: [
      { label: "View Details", action: "modal" },
      { label: "Book WhatsApp", href: `https://wa.me/${artist.contact.whatsapp}?text=Hi%2C%20I%27m%20interested%20in%20booking%20with%20${artist.name.replace(' ', '%20')}.%20Please%20share%20availability.` },
      { label: "Email Artist", href: `mailto:${artist.contact.email}` }
    ]
  }))
  .sort((a, b) => b.stats.yearsExperience - a.stats.yearsExperience); // Sort by experience
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  
  <!-- SEO Meta Tags -->
  <meta name="keywords" content="tattoo artists Delhi, professional tattoo artists, best tattoo artists Delhi NCR, realism tattoo artists, blackwork specialists Delhi">
  <meta name="author" content="DelhiTattooShop.com">
  
  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://delhitattooshop.com/artists">
  
  <link rel="canonical" href="https://delhitattooshop.com/artists">
  
  <!-- Google Tag Manager -->
  <script src="/gtm.js" is:inline></script>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Poppins:wght@400;600&display=swap" rel="stylesheet">

  <!-- Schema Markup -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "Delhi's Top 8 Tattoo Artists",
    "url": "https://www.delhitattooshop.com/artists",
    "description": "Meet Delhi's most skilled tattoo artists at DelhiTattooShop.com",
    "mainEntity": {
      "@type": "ItemList",
      "numberOfItems": 8,
      "itemListElement": [
        {
          "@type": "Person",
          "name": "Maddy (Ravi)",
          "jobTitle": "Studio Founder & Black & Grey Realism Specialist",
          "worksFor": {
            "@type": "Organization",
            "name": "DelhiTattooShop.com"
          }
        }
      ]
    }
  }
  </script>

  <style>
    :root {
      --glass-bg: rgba(18, 18, 18, 0.06);
      --glass-border: rgba(255,255,255,0.08);
      --glass-blur: 20px;
      --max-width: 1150px;
      --border: rgba(255,255,255,0.12);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', -apple-system, sans-serif;
      background: #000000;
      color: #ffffff;
      line-height: 1.6;
      overflow-x: hidden;
    }

    #apex-page {
      background: #000000;
      min-height: 100vh;
      position: relative;
    }

    /* Liquid Background Effects */
    .liquid-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      overflow: hidden;
    }

    .blob {
      position: absolute;
      border-radius: 50%;
      filter: blur(40px);
      opacity: 0.1;
      animation: float 20s infinite;
    }

    .b1 {
      width: 300px;
      height: 300px;
      background: rgba(255, 255, 255, 0.02);
      top: 20%;
      left: 10%;
      animation-delay: 0s;
    }

    .b2 {
      width: 200px;
      height: 200px;
      background: rgba(255, 255, 255, 0.03);
      top: 60%;
      right: 15%;
      animation-delay: 5s;
    }

    .b3 {
      width: 150px;
      height: 150px;
      background: rgba(255, 255, 255, 0.02);
      bottom: 20%;
      left: 60%;
      animation-delay: 10s;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }

    .container {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 20px;
    }

    /* Header */
    #apex-page .header-wrap {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 999;
      background: rgba(0, 0, 0, 0.8);
      backdrop-filter: blur(var(--glass-blur));
      border-bottom: 1px solid var(--glass-border);
    }

    #apex-page .glass-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 0;
    }

    #apex-page .logo-text {
      font-size: 1.5rem;
      font-weight: 700;
      color: #ffffff;
      text-decoration: none;
    }

    #apex-page .nav-menu {
      display: flex;
      gap: 2rem;
      list-style: none;
    }

    #apex-page .nav-menu a {
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    #apex-page .nav-menu a:hover {
      color: #ffffff;
    }

    /* Main Content */
    #apex-page .main-content {
      padding-top: 100px;
      min-height: 100vh;
    }

    /* Page Header */
    #apex-page .page-header {
      text-align: center;
      padding: 4rem 0 3rem;
    }

    #apex-page .page-title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(2.5rem, 5vw, 4rem);
      font-weight: 700;
      margin-bottom: 1rem;
      background: linear-gradient(135deg, #ffffff, rgba(255, 255, 255, 0.7));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: -0.02em;
    }

    #apex-page .page-subtitle {
      font-size: 1.25rem;
      color: rgba(255, 255, 255, 0.8);
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }

    /* Artist Grid */
    #apex-page .artist-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      padding: 2rem 0;
    }

    #apex-page .artist-card {
      background: var(--glass-bg);
      backdrop-filter: blur(var(--glass-blur));
      border: 1px solid var(--glass-border);
      border-radius: 20px;
      overflow: hidden;
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
    }

    #apex-page .artist-card:hover {
      transform: translateY(-10px);
      border-color: rgba(255, 255, 255, 0.15);
      background: rgba(255, 255, 255, 0.05);
      box-shadow: 0 25px 50px rgba(255, 255, 255, 0.08);
    }

    #apex-page .artist-avatar {
      width: 160px;
      height: 160px;
      border-radius: 50%;
      object-fit: cover;
      margin: 2rem auto 1rem;
      display: block;
      filter: grayscale(100%) contrast(1.1);
      transition: filter 0.3s ease;
    }

    #apex-page .artist-card:hover .artist-avatar {
      filter: grayscale(0%) contrast(1);
    }

    #apex-page .artist-info {
      padding: 0 2rem 2rem;
      text-align: center;
    }

    #apex-page .artist-name {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: #ffffff;
      letter-spacing: -0.01em;
    }

    #apex-page .artist-specialty {
      color: rgba(255, 255, 255, 0.7);
      margin-bottom: 0.5rem;
      font-size: 1rem;
    }

    #apex-page .artist-experience {
      color: rgba(255, 255, 255, 0.6);
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    #apex-page .artist-buttons {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    #apex-page .btn-artist {
      padding: 0.75rem 1.5rem;
      border: 1px solid var(--glass-border);
      background: var(--glass-bg);
      color: #ffffff;
      text-decoration: none;
      border-radius: 50px;
      text-align: center;
      font-weight: 500;
      transition: all 0.3s ease;
      display: block;
    }

    #apex-page .btn-artist:hover {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.15);
      transform: translateY(-2px);
    }

    #apex-page .btn-primary {
      background: #ffffff;
      color: #000000;
      border-color: #ffffff;
    }

    #apex-page .btn-primary:hover {
      background: rgba(255, 255, 255, 0.9);
      box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
    }

    /* Modal Styles */
    #apex-page .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.8);
      backdrop-filter: blur(10px);
    }

    #apex-page .modal-content {
      background: var(--glass-bg);
      backdrop-filter: blur(var(--glass-blur));
      border: 1px solid var(--glass-border);
      margin: 5% auto;
      padding: 2rem;
      border-radius: 20px;
      width: 90%;
      max-width: 800px;
      max-height: 80vh;
      overflow-y: auto;
      position: relative;
    }

    #apex-page .modal-close {
      position: absolute;
      right: 1rem;
      top: 1rem;
      font-size: 2rem;
      font-weight: bold;
      color: rgba(255, 255, 255, 0.7);
      cursor: pointer;
      transition: color 0.3s ease;
    }

    #apex-page .modal-close:hover {
      color: #ffffff;
    }

    #apex-page .modal-artist-name {
      font-family: 'Playfair Display', serif;
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: #ffffff;
    }

    #apex-page .modal-bio {
      color: rgba(255, 255, 255, 0.8);
      line-height: 1.6;
      margin-bottom: 2rem;
    }

    #apex-page .modal-portfolio {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      margin-top: 2rem;
    }

    #apex-page .portfolio-image {
      border-radius: 10px;
      overflow: hidden;
      cursor: pointer;
      transition: transform 0.3s ease;
    }

    #apex-page .portfolio-image:hover {
      transform: scale(1.05);
    }

    #apex-page .portfolio-image img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      display: block;
    }

    #apex-page .specialties-list {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin: 1rem 0;
    }

    #apex-page .specialty-tag {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid var(--glass-border);
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.875rem;
      color: rgba(255, 255, 255, 0.8);
    }

    /* Mobile Responsiveness */
    @media (max-width: 768px) {
      #apex-page .page-title {
        font-size: 2rem;
      }
      
      #apex-page .artist-grid {
        grid-template-columns: 1fr;
        padding: 1rem 0;
      }
      
      #apex-page .modal-content {
        margin: 10% auto;
        padding: 1.5rem;
        width: 95%;
      }
      
      #apex-page .modal-portfolio {
        grid-template-columns: 1fr 1fr;
      }
      
      #apex-page .nav-menu {
        display: none;
      }
    }

    /* Focus States for Accessibility */
    button:focus,
    a:focus {
      outline: 2px solid rgba(255, 255, 255, 0.5);
      outline-offset: 2px;
    }

    /* Smooth Scrolling */
    html {
      scroll-behavior: smooth;
    }
  </style>
</head>

<body>
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-K4DMPN4P" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

  <div id="apex-page">
    <!-- Header -->
    <div class="header-wrap">
      <div class="container">
        <div class="glass-header">
          <a href="/" class="logo-text">DelhiTattooShop.com</a>
          <nav>
            <ul class="nav-menu">
              <li><a href="/#artists">Artists</a></li>
              <li><a href="/#services">Services</a></li>
              <li><a href="/#gallery">Gallery</a></li>
              <li><a href="/pricing-calculator">Pricing</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>

    <!-- Liquid Background -->
    <div class="liquid-bg" aria-hidden="true">
      <div class="blob b1"></div>
      <div class="blob b2"></div>
      <div class="blob b3"></div>
    </div>

    <!-- Main Content -->
    <main class="main-content">
      <div class="container">
        <!-- Page Header -->
        <section class="page-header">
          <h1 class="page-title">Delhi's Top 8 Tattoo Artists</h1>
          <p class="page-subtitle">Meet our professional artists, each specializing in unique styles and techniques. Every artist has years of experience creating masterpiece tattoos.</p>
        </section>

        <!-- Artists Grid -->
        <section class="artist-grid" id="artists-container">
          {artists.map((artist, index) => (
            <div class="artist-card" role="article">
              <img src={artist.main_image} alt={artist.alt} class="artist-avatar" />
              <div class="artist-info">
                <h3 class="artist-name">{artist.name}</h3>
                <p class="artist-specialty">{artist.specialties.join(' • ')}</p>
                <p class="artist-experience">{artist.experience} • {artist.stats.yearsExperience}+ Years</p>
                
                <div class="artist-buttons">
                  <button class="btn-artist btn-primary" onclick={`openModal('${artist.id}')`}>
                    View Full Profile
                  </button>
                  <a href={artist.other_buttons[1].href} class="btn-artist" target="_blank" rel="noopener">
                    Book on WhatsApp
                  </a>
                  <a href={artist.other_buttons[2].href} class="btn-artist">
                    Email {artist.name.split(' ')[0]}
                  </a>
                </div>
              </div>
            </div>
          ))}
        </section>

        <!-- Back to Home -->
        <div style="text-align: center; margin: 3rem 0;">
          <a href="/" class="btn-artist btn-primary" style="display: inline-block; min-width: 200px;">
            Back to Homepage
          </a>
        </div>
      </div>
    </main>

    <!-- Modals for each artist -->
    {artists.map((artist) => (
      <div id={`modal-${artist.id}`} class="modal">
        <div class="modal-content">
          <span class="modal-close" onclick={`closeModal('${artist.id}')`}>&times;</span>
          <h2 class="modal-artist-name">{artist.name}</h2>
          <p class="modal-bio">{artist.extended_bio}</p>
          
          <h4>Specialties:</h4>
          <div class="specialties-list">
            {artist.specialties.map((specialty) => (
              <span class="specialty-tag">{specialty}</span>
            ))}
          </div>
          
          <p><strong>Experience:</strong> {artist.experience} ({artist.stats.yearsExperience}+ years)</p>
          <p><strong>Completed Tattoos:</strong> {artist.stats.tattoosCompleted}+</p>
          <p><strong>Pricing:</strong> Starting from ₹{artist.stats.startingPrice}/inch</p>
          
          <h4 style="margin-top: 2rem;">Portfolio Gallery:</h4>
          <div class="modal-portfolio">
            {artist.portfolioPhotos.map((photo, index) => (
              <div class="portfolio-image">
                <img src={photo.path} alt={photo.description} loading="lazy" />
              </div>
            ))}
          </div>
          
          <div style="margin-top: 2rem; text-align: center;">
            <a href={artist.other_buttons[1].href} class="btn-artist btn-primary" target="_blank" rel="noopener">
              Book with {artist.name.split(' ')[0]} on WhatsApp
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>

  <script>
    // Modal functionality
    function openModal(artistId) {
      document.getElementById(`modal-${artistId}`).style.display = 'block';
      document.body.style.overflow = 'hidden';
    }

    function closeModal(artistId) {
      document.getElementById(`modal-${artistId}`).style.display = 'none';
      document.body.style.overflow = 'auto';
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
      if (event.target.classList.contains('modal')) {
        event.target.style.display = 'none';
        document.body.style.overflow = 'auto';
      }
    }

    // Close modal with Escape key
    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape') {
        const openModals = document.querySelectorAll('.modal[style*="block"]');
        openModals.forEach(modal => {
          modal.style.display = 'none';
        });
        document.body.style.overflow = 'auto';
      }
    });
  </script>
</body>
</html>