{
  "functions": {
    "src/pages/**/*.astro": {
      "memory": 1024
    }
  },
  "build": {
    "env": {
      "VERCEL_FORCE_REBUILD": "true",
      "DEPLOYMENT_TRIGGER": "true"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "1st-virid.vercel.app"
        }
      ],
      "destination": "https://delhitattooshop.com",
      "permanent": true
    }
  ]
}